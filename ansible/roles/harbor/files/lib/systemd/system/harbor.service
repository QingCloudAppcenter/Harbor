[Unit]
Description=Harbor wrapper
Documentation=https://goharbor.io
After=network-online.target
Wants=network-online.target
ConditionFileNotEmpty=/opt/app/conf/docker-compose.yml

[Service]
EnvironmentFile=/opt/app/bin/envs/harbor.env
ExecStart=/usr/bin/docker-compose -f /opt/app/conf/docker-compose.yml up
ExecStop=/usr/bin/docker-compose -f /opt/app/conf/docker-compose.yml down
Restart=on-abnormal
TimeoutSec=300s

[Install]
WantedBy=multi-user.target
